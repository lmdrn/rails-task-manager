<h1>Edit Task</h1>

<div class=form>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :task %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :infos %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "Checked ?" %>
    <%= f.check_box :completed %>
  </div>

  <%= f.submit class: 'btn btn-success' %>
<% end %>
</div>

<%= link_to tasks_path do %>
 <div class="inline backlist" ><i class="far fa-hand-point-left"></i><p>BACK TO LIST</p></div>
<% end %>
